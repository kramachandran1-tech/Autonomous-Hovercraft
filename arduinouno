#include <SoftwareSerial.h>

SoftwareSerial bleSerial(8, 9); // RX (Arduino), TX (Arduino)

int speedValue = 0;

void setup() {
  Serial.begin(115200);     // USB monitor
  bleSerial.begin(9600);    // Bluefruit UART
}

void loop() {
  if (bleSerial.available()) {
    speedValue = bleSerial.parseInt();
    Serial.print("Received speed: ");
    Serial.println(speedValue);
  }
}
